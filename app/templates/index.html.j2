<!DOCTYPE html>
<html>
<head>
    <title>Chicken Scratch Console</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
    <h1>Chicken Scratch Console</h1>
    <table class="table table-striped">
        <thead>
            <tr><th>ID</th><th>Status</th><th>Host</th><th>Created</th><th>Tokens</th></tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><a href="/dashboard/{{ game.id }}">{{ game.id }}</a></td>
                <td>{{ game.status }}</td>
                <td>{{ game.host_id }}</td>
                <td>{{ game.created_at }}</td>
                <td>{{ game.usage_input_tokens + game.usage_output_tokens }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</body>
</html>